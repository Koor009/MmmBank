<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div >
        <div class="navbar navbar-inverse navbar-fixed-top ">
            <div class="container">
                <div class="navbar-header ">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav fontSize">
                        <li>@Html.ActionLink("MMM Bank", "Index", "Home")</li>
                        @if (!User.IsInRole("admin") && !User.IsInRole("moderator"))
                        {
                            <li>@Html.ActionLink("Manage", "ManageUserCard", "Manage")</li>
                            <li>@Html.ActionLink("Payments", "Payments", "Home")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Message", "UsersNotifications", "Home")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content ">
            @RenderBody()
            <footer class="navbar-fixed-bottom">
                <p class="text-center">&copy; @DateTime.Now.Year - Korolko Anatolii</p>
            </footer>
        </div>
    </div>
   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
